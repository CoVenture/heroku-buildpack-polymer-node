#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>

set -e
set -o pipefail

# Heroku-provided params
BUILD_DIR="$1"
CACHE_DIR="$2"
ENV_DIR="$3"

function speak (){
  echo "-----> $(date -u '+%Y-%m-%d_%H:%M:%S') $1"
}

speak "Installing NPM..."
cd $BUILD_DIR
NODE_DIR="node-v7.8.0-linux-x64"
NODE_TAR="$NODE_DIR.tar.gz"
wget -nv https://nodejs.org/dist/v7.8.0/$NODE_TAR
tar -zxf $NODE_TAR
mv $BUILD_DIR/$NODE_DIR $BUID_DIR/vendor/
mkdir -p $BUILD_DIR/vendor
export PATH="$PATH:$BUILD_DIR/vendor/$NODE_DIR/bin"

speak "Installing Polymer 2..."
npm install -g polymer-cli@next
npm install -g bower

speak "Installing package dependencies..."
bower install

mkdir -p $BUILD_DIR/.profile.d
cat<<EOF > $BUILD_DIR/.profile.d/init.sh
PATH="\$PATH:\$HOME/$BUILD_DIR/vendor/$NODE_DIR/bin"
EOF

speak "Finished!"
