#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>

set -e
set -o pipefail

# Heroku-provided params
BUILD_DIR="$1"
CACHE_DIR="$2"
ENV_DIR="$3"

function speak (){
  echo "-----> $(date -u '+%Y-%m-%d_%H:%M:%S') $1"
}

speak "Installing NPM..."
NODE_NAME="node-v7.8.0-linux-x86.tar.gz"
wget https://nodejs.org/dist/v7.8.0/$NODE_NAME
echo "Before untar"
ls
tar -zxf $NODE_NAME
echo "After untar"
ls
mv "node-v7.8.0-linux-x86" node
echo "After mv"
CWD=`pwd`
PATH=$PATH:$CWD/node/bin
ls ./node/bin/

speak "Installing Polymer 2..."
npm install -g polymer-cli@next

speak "Installing package dependencies..."
cd $BUILD_DIR
bower install

speak "Finished!"
