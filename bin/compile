#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>

set -e
set -o pipefail

# Heroku-provided params
BUILD_DIR="$1"
CACHE_DIR="$2"
ENV_DIR="$3"

function speak (){
  echo "-----> $(date -u '+%Y-%m-%d_%H:%M:%S') $1"
}

speak "Installing NPM..."
NODE_DIR="node-v7.8.0-linux-x86"
NODE_TAR="$NODE_DIR.tar.gz"
wget https://nodejs.org/dist/v7.8.0/$NODE_TAR
echo "Before untar"
ls
tar -zxf $NODE_TAR
echo "After untar"
ls
CWD="$(pwd)"
echo "$CWD"
PATH="$PATH:$CWD/$NODE_DIR/bin"
ls "$CWD/$NODE_DIR/bin/"

speak "Installing Polymer 2..."
npm install -g polymer-cli@next

speak "Installing package dependencies..."
cd $BUILD_DIR
bower install

speak "Finished!"
